                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "const": "completedCourses" },
                  "bySchedule": { "type": "string" },
                  "length": { "type": "number", "minimum": 1 },
                  "mode": { "type": "string", "enum": ["long", "short"] },
                  "crossDay": { "type": "boolean" }
                },
                "required": [
